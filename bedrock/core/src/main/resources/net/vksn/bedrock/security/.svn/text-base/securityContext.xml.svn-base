<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
              http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">
	<security:http auto-config="true">
		<security:intercept-url pattern="/**" access="ROLE_USER,ROLE_ADMIN" />
		<security:intercept-url pattern="/styles/*" filters="none"/>
		<security:intercept-url pattern="/images/*" filters="none"/>
		<security:intercept-url pattern="/favicon.ico" filters="none"/>
		<security:logout invalidate-session="true" logout-url="/logout.html"/>
		<security:intercept-url pattern="/login.do" filters="none" />
		<security:form-login login-page="/login.do" default-target-url="/view.do" always-use-default-target="true" authentication-failure-url="/login.do?errors=true" />
		
	</security:http>
	
	<security:authentication-provider user-service-ref="authenticationService"/>
	
	<bean id="authenticationService" class="net.vksn.bedrock.security.services.impl.AuthenticationService">
		<property name="userService" ref="userService"/>
	</bean>
</beans>